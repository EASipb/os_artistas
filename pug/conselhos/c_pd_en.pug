        section#competencias
            .text-center.mt-4
                h1 Competencies
                   
            .container.mt-5

                .row.d-inline

                    h1.d-inline 01
                    p.lead.ms-5.mt-4.d-inline To pronounce on the pedagogical guidelines and the teaching and assessment methods;
                    p

                .row.d-inline

                    h1.d-inline 02
                    p.lead.ms-5.mt-4.d-inline Promote regular surveys of the pedagogical performance of the School or Institute, carry out their analysis and dissemination and propose measures for improvement;
                    p

                .row.d-inline

                    h1.d-inline 03
                    p.lead.ms-5.mt-4.d-inline Promote the evaluation of the pedagogical performance of teachers, by them and by students, carry out its analysis and dissemination and propose improvement measures;
                    p

                .row.d-inline

                    h1.d-inline 04
                    p.lead.ms-5.mt-4.d-inline To assess complaints regarding pedagogical failures, and to propose the necessary measures;
                    p

                .row.d-inline

                    h1.d-inline 05
                    p.lead.ms-5.mt-4.d-inline Approve the regulation for the evaluation of students' performance;
                    p

                .row.d-inline

                    h1.d-inline 06
                    p.lead.ms-5.mt-4.d-inline To pronounce on the statute of limitations;
                    p

                .row.d-inline

                    h1.d-inline 07
                    p.lead.ms-5.mt-4.d-inline To pronounce on the creation of courses and on the plans of the courses taught;
                    p

                .row.d-inline

                    h1.d-inline 08
                    p.lead.ms-5.mt-4.d-inline To pronounce on the institution of school awards;
                    p

                .row.d-inline

                    h1.d-inline 09
                    p.lead.ms-5.mt-4.d-inline To pronounce on the academic calendar and the School's examination maps;
                    p

                
                .row.d-inline

                    h1.d-inline 10
                    p.lead.ms-5.mt-4.d-inline Liaise with the Student Ombudsman.
                    p

        
                
        

